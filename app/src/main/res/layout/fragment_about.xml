<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android">
   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginBottom="104dp"
       android:layout_marginTop="8dp"
       android:layout_above="@id/btn_denote">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/header"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp">
               <RelativeLayout
                   android:layout_width="64dp"
                   android:layout_height="64dp"
                   android:id="@+id/logo"
                   android:background="@drawable/light_red_oval">
                   <RelativeLayout
                       android:layout_width="48dp"
                       android:layout_height="48dp"
                       android:layout_centerInParent="true"
                       android:background="@drawable/dark_red_oval">
                       <ImageView
                           android:layout_width="36dp"
                           android:layout_height="36dp"
                           android:src="@drawable/ic_timer_white_36dp"
                           android:scaleType="fitXY"
                           android:layout_centerInParent="true"/>
                   </RelativeLayout>
               </RelativeLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_toRightOf="@id/logo"
                   android:layout_marginLeft="16dp"
                   android:orientation="vertical">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Cornometer"
                       android:textSize="24sp" />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="18sp"
                       android:text="A free application for all people, especially for whom that want to prepare themselves for PTE exam. you can denote this app for improving it and add other features to this application by us. In addition, you can send your needs for me by mail and I try to add this need to the app."/>
               </LinearLayout>

           </RelativeLayout>
           <android.support.v7.widget.CardView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:layout_marginLeft="16dp"
               android:layout_marginRight="16dp"
               app:cardCornerRadius="24dp"
               android:layout_below="@id/header"
               android:id="@+id/alireza"
               >
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   >
                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical"
                       android:layout_marginTop="8dp"
                       android:layout_marginLeft="16dp"
                       android:layout_toRightOf="@id/img_logo"
                       >
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textSize="24sp"
                           android:id="@+id/tv_title"
                           android:text="Reza Taghizadeh"
                           android:textColor="@color/mediumJunglegreen"/>
                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:textColor="@color/blue_grey_active"
                           android:text="Android/Ios Developer"
                           android:textSize="16sp"
                           android:id="@+id/tv_desc"
                           />
                   </LinearLayout>
                   <android.support.v7.widget.AppCompatImageView
                       android:layout_width="56.0dp"
                       android:layout_height="56.0dp"
                       android:id="@+id/img_logo"
                       android:layout_marginTop="8dp"
                       android:layout_marginLeft="16dp"
                       android:src="@drawable/my_image"
                       android:padding="8dp"
                       android:background="@drawable/round_blue_boarder"
                       android:layout_alignParentLeft="true"/>
                   <RelativeLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_below="@id/img_logo"
                       android:layout_margin="8dp"
                       android:gravity="center_horizontal"
                       android:background="@drawable/background_round">

                       <ImageView
                           android:layout_width="36dp"
                           android:layout_height="36dp"
                           android:layout_marginTop="4dp"
                           android:layout_marginLeft="16dp"
                           android:id="@+id/btn_mail"
                           android:scaleType="fitXY"
                           android:src="@drawable/ic_mail_outline_white_36dp"
                           android:layout_marginBottom="4dp"
                           />
                       <ImageView
                           android:layout_width="36dp"
                           android:layout_height="36dp"
                           android:layout_marginTop="4dp"
                           android:layout_marginLeft="16dp"
                           android:padding="6dp"
                           android:id="@+id/btn_linked_in"
                           android:layout_toRightOf="@id/btn_mail"
                           android:src="@drawable/linked_in_logo"
                           android:layout_marginBottom="4dp"
                           />
                       <ImageView
                           android:layout_width="36dp"
                           android:layout_height="36dp"
                           android:layout_marginTop="4dp"
                           android:layout_marginLeft="16dp"
                           android:id="@+id/btn_git"
                           android:padding="2dp"
                           android:layout_toRightOf="@id/btn_linked_in"
                           android:src="@drawable/github"
                           android:layout_marginBottom="4dp"
                           />

                   </RelativeLayout>
               </RelativeLayout>
           </android.support.v7.widget.CardView>

       </RelativeLayout>
   </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkblue"
        android:textColor="@color/white"
        android:text="Denote"
        android:visibility="gone"
        android:id="@+id/btn_denote"
        android:textSize="24sp"/>
</RelativeLayout>